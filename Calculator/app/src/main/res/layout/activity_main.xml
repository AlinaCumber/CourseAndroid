<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

    <TextView
        android:id="@+id/tvresult"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="end|bottom"
        android:textSize="20dp"
        android:padding="10dp"
        android:background="@color/textView"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/seven"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/btnPrimary"
            android:text="7"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:onClick="onDigit"
            tools:ignore="UsingOnClickInXml"



            />

        <Button
            android:id="@+id/eight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/btnPrimary"
            android:text="8"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:onClick="onDigit"
            tools:ignore="UsingOnClickInXml"

            />

        <Button
            android:id="@+id/nine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/btnPrimary"
            android:text="9"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:onClick="onDigit"
            tools:ignore="UsingOnClickInXml"

            />

        <Button
            android:id="@+id/devision"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/btnPrimary"
            android:text="/"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:onClick="onOperator"
            tools:ignore="UsingOnClickInXml"

            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/btnPrimary"
            android:text="4"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:onClick="onDigit"
            tools:ignore="UsingOnClickInXml"


             />

        <Button
            android:id="@+id/five"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/btnPrimary"
            android:text="5"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:onClick="onDigit"

            tools:ignore="UsingOnClickInXml"/>

        <Button
            android:id="@+id/six"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/btnPrimary"
            android:text="6"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:onClick="onDigit"

            tools:ignore="OnClick" />

        <Button
            android:id="@+id/multiply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/btnPrimary"
            android:text="*"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:onClick="onOperator"

            tools:ignore="OnClick" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/btnPrimary"
            android:text="1"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:onClick="onDigit"


            tools:ignore="OnClick" />

        <Button
            android:id="@+id/two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/btnPrimary"
            android:text="2"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:onClick="onDigit"

            tools:ignore="OnClick" />

        <Button
            android:id="@+id/three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/btnPrimary"
            android:text="3"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:onClick="onDigit"

            tools:ignore="OnClick" />

        <Button
            android:id="@+id/plus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/btnPrimary"
            android:text="+"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:onClick="onOperator"

            tools:ignore="OnClick" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >



        <Button
            android:id="@+id/zero"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/btnPrimary"
            android:text="0"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:onClick="onDigit"

            tools:ignore="OnClick" />

        <Button
            android:id="@+id/point"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/btnPrimary"
            android:text="."
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:onClick="onDecimlPoint"

            tools:ignore="OnClick" />

        <Button
            android:id="@+id/ctr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/btnPrimary"
            android:text="CTR"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:onClick="onClear"

            tools:ignore="OnClick" />

        <Button
            android:id="@+id/minus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/btnPrimary"
            android:text="-"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:onClick="onOperator"

            tools:ignore="OnClick" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/equal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/btnPrimary"
            android:text="="
            android:layout_weight="1"
            android:layout_margin="2dp"



            tools:ignore="OnClick" />


    </LinearLayout>












</LinearLayout>